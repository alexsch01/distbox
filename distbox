#!/bin/sh

if ! command -v rpm-ostree &> /dev/null; then
    echo "rpm-ostree could not be found"
    exit 1
fi

DISTBOX_IMAGE=registry.fedoraproject.org/fedora-toolbox:latest
DISTBOX_HOME=$HOME/distbox-home

uninstall_distbox() {
    HOME=$DISTBOX_HOME podman stop my-distbox 1> /dev/null 2> /dev/null
    HOME=$DISTBOX_HOME podman unshare chown root: -R $DISTBOX_HOME/.local/share/containers/storage 2> /dev/null
    HOME=$DISTBOX_HOME podman unshare rm -rf $DISTBOX_HOME 2> /dev/null
    rm -rf $DISTBOX_HOME
}

dbus_setup() {
    HOME=$DISTBOX_HOME podman exec my-distbox rm -f /run/dbus/pid
    HOME=$DISTBOX_HOME podman exec my-distbox dbus-daemon --system
    HOME=$DISTBOX_HOME podman exec --user=$USER my-distbox dbus-daemon --session --address=unix:path=/run/user/$(id -u)/bus &
}

if [ "$1" = "install" ]; then
    read -r -p "Do you want to install/replace your distbox? [y/N] " response
    if ! [[ "$response" =~ ^([yY][eE][sS]|[yY])$ ]]; then
        exit
    fi

    uninstall_distbox

    mkdir -p $DISTBOX_HOME/.config/containers

    echo '[storage]
driver = "overlay"
runroot = "$HOME/.config/containers/storage"' > $DISTBOX_HOME/.config/containers/storage.conf

    mkdir -p $DISTBOX_HOME/.local/bin

    ln -sf $XAUTHORITY /run/user/$(id -u)/distbox-X11-symlink

    curl -s https://raw.githubusercontent.com/alexsch01/distbox-distrobox/main/distrobox-enter > $DISTBOX_HOME/.local/bin/distrobox-enter
    curl -s https://raw.githubusercontent.com/alexsch01/distbox-distrobox/main/distrobox-init > $DISTBOX_HOME/.local/bin/distrobox-init

    chmod +x $DISTBOX_HOME/.local/bin/distrobox-*

    HOME=$DISTBOX_HOME podman create \
        --hostname $HOSTNAME \
        --name my-distbox \
        --privileged \
        --security-opt label=disable \
        --security-opt apparmor=unconfined \
        --pids-limit=-1 \
        --user root:root \
        --shm-size $(df -h /dev/shm | awk '{ print $2 }' | sed -n 2p) \
        --network host \
        --label manager=distrobox \
        --label distrobox.unshare_groups=1 \
        --env SHELL=bash \
        --env HOME=/home/$USER \
        --env container=podman \
        --env TERMINFO_DIRS=/usr/share/terminfo \
        --env CONTAINER_ID=my-distbox \
        --volume $DISTBOX_HOME/.local/bin/distrobox-init:/usr/bin/entrypoint:ro \
        --volume $DISTBOX_HOME:/home/$USER \
        --volume /dev:/dev:ro \
        --volume /sys:/sys:ro \
        --volume /dev/pts \
        --volume /dev/null:/dev/ptmx \
        --volume /sys/fs/selinux \
        --volume /var/log/journal \
        --volume /run/user/$(id -u)/wayland-0:/run/user/$(id -u)/wayland-0:ro \
        --volume /run/user/$(id -u)/pipewire-0:/run/user/$(id -u)/pipewire-0:ro \
        --volume /run/user/$(id -u)/distbox-X11-symlink:/run/user/$(id -u)/distbox-X11-symlink:ro \
        --volume /etc/hosts:/etc/hosts:ro \
        --volume /etc/resolv.conf:/etc/resolv.conf:ro \
        --volume /etc/hostname:/etc/hostname:ro \
        --annotation run.oci.keep_original_groups=1 \
        --ulimit host \
        --userns keep-id \
        --entrypoint /usr/bin/entrypoint $DISTBOX_IMAGE \
            --verbose \
            --name $USER \
            --user $(id -u) \
            --group $(id -g) \
            --home /home/$USER \
            --init 0 \
            --nvidia 0 \
            --pre-init-hooks '' \
            --additional-packages 'google-noto-color-emoji-fonts google-noto-sans-mono-fonts dbus-daemon' -- ''

    HOME=$DISTBOX_HOME $DISTBOX_HOME/.local/bin/distrobox-enter my-distbox --no-workdir -- ''
    rm $DISTBOX_HOME/.local/bin/distrobox-enter
    HOME=$DISTBOX_HOME podman exec my-distbox chown $USER: /run/user/$(id -u)

    HOME=$DISTBOX_HOME podman exec my-distbox mkdir /run/dbus
    dbus_setup
    HOME=$DISTBOX_HOME podman exec my-distbox rm -f /etc/machine-id
    HOME=$DISTBOX_HOME podman exec my-distbox dbus-uuidgen --ensure=/etc/machine-id

    cp /etc/skel/.bashrc $DISTBOX_HOME
    cp /etc/skel/.bash_profile $DISTBOX_HOME
elif [ "$1" = "run" ]; then
    if [ "$(readlink -f /run/user/$(id -u)/distbox-X11-symlink)" != "$XAUTHORITY" ]; then
        HOME=$DISTBOX_HOME podman stop my-distbox 1> /dev/null
        ln -sf $XAUTHORITY /run/user/$(id -u)/distbox-X11-symlink
    fi

    ERROR_NEED_DBUS_SETUP=$(HOME=$DISTBOX_HOME podman exec my-distbox echo 2>&1)
    HOME=$DISTBOX_HOME podman start my-distbox > /dev/null
    if [ "$ERROR_NEED_DBUS_SETUP" == "Error: can only create exec sessions on running containers: container state improper" ]; then
        dbus_setup
    fi

    HOME=$DISTBOX_HOME podman exec \
        --interactive \
        --detach-keys= \
        --user=root \
        --tty \
        --workdir=/home/$USER \
        --env HISTCONTROL=ignoredups \
        --env HISTSIZE=1000 \
        --env XDG_SESSION_TYPE=wayland \
        --env LANG=$LANG \
        --env WAYLAND_DISPLAY=wayland-0 \
        --env DISPLAY=:0 \
        --env XDG_RUNTIME_DIR=/run/user/$(id -u) \
        --env TZ=$(timedatectl show --va -p Timezone) \
        --env DBUS_SESSION_BUS_ADDRESS=unix:path=/run/user/$(id -u)/bus \
    my-distbox \
        su $USER --pty -c "XAUTHORITY=/run/user/$(id -u)/distbox-X11-symlink ${*: 2}"
elif [ "$1" = "enter" ]; then
    distbox run bash
elif [ "$1" = "upgrade" ]; then
    read -r -p "Do you want to upgrade your distbox? [y/N] " response
    if ! [[ "$response" =~ ^([yY][eE][sS]|[yY])$ ]]; then
        exit
    fi

    HOME=$DISTBOX_HOME podman stop my-distbox 1> /dev/null 2> /dev/null
    HOME=$DISTBOX_HOME podman image pull $DISTBOX_IMAGE
elif [ "$1" = "stop" ]; then
    read -r -p "Do you want to stop your distbox? [y/N] " response
    if ! [[ "$response" =~ ^([yY][eE][sS]|[yY])$ ]]; then
        exit
    fi

    HOME=$DISTBOX_HOME podman stop my-distbox
elif [ "$1" = "uninstall" ]; then
    read -r -p "Do you want to uninstall your distbox? [y/N] " response
    if ! [[ "$response" =~ ^([yY][eE][sS]|[yY])$ ]]; then
        exit
    fi

    uninstall_distbox
else
    echo $'Valid commands: \n'
    echo 'distbox install'
    echo 'distbox run COMMAND'
    echo 'distbox enter'
    echo 'distbox upgrade'
    echo 'distbox stop'
    echo 'distbox uninstall'
fi
